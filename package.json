{
    "name": "@justbuild/triumvirate",
    "version": "0.4.1",
    "description": "Run codebase reviews across OpenAI, Claude, and Gemini models.",
    "type": "module",
    "bin": {
        "triumvirate": "./dist/triumvirate.js",
        "tri": "./dist/triumvirate.js",
        "__triumvirate_bash_complete": "./dist/bash-complete.js"
    },
    "main": "dist/index.js",
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "start": "node dist/triumvirate.js",
        "dev": "tsx src/bin/triumvirate.ts",
        "build": "npx baml-cli generate && tsup",
        "baml:generate": "npx baml-cli generate",
        "clean": "rm -rf dist",
        "rebuild": "npm run clean && npm run build",
        "prepare": "husky",
        "prepublishOnly": "npm run verify && npm run build",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "node scripts/e2e-test.js",
        "lint": "eslint . --max-warnings=0",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "tsc -p src/tsconfig.json --noEmit --resolveJsonModule --esModuleInterop",
        "verify": "npm run lint && npm run format:check && npm run type-check",
        "precommit": "lint-staged && npm run type-check:changed",
        "type-check:changed": "node scripts/check-types-changed.js",
        "check:spelling": "node scripts/check-spelling.js",
        "check:coverage": "node scripts/check-coverage.js",
        "verify:deployment": "node scripts/verify-deployment.js",
        "release:prepare": "npm run verify && npm run test && npm run test:e2e && npm run check:spelling && npm run check:coverage && npm run verify:deployment"
    },
    "keywords": [
        "review",
        "LLM",
        "cli",
        "openai",
        "claude",
        "gemini",
        "PR",
        "pull request",
        "github actions"
    ],
    "author": "Sean Kruzel <sean@closedloop.tech>",
    "license": "MIT",
    "tsup": {
        "entry": [
            "src/bin/triumvirate.ts",
            "src/bin/bash-complete.ts"
        ],
        "format": [
            "esm"
        ],
        "tsconfig": "src/tsconfig.json",
        "clean": true,
        "splitting": true,
        "minify": true
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.74.0",
        "@boundaryml/baml": "^0.219.0",
        "@google/genai": "^1.41.0",
        "@google/generative-ai": "^0.24.1",
        "@octokit/rest": "^21.0.0",
        "cli-spinners": "^3.4.0",
        "commander": "^14.0.3",
        "dotenv": "^17.3.1",
        "log-update": "^7.1.0",
        "openai": "^6.22.0",
        "picocolors": "^1.0.0",
        "repomix": "^1.11.1"
    },
    "devDependencies": {
        "@types/log-update": "^3.1.0",
        "@types/node": "^25.2.3",
        "@typescript-eslint/eslint-plugin": "^8.56.0",
        "@typescript-eslint/parser": "^8.56.0",
        "esbuild": "^0.27.3",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-node": "^11.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "ts-node": "^10.9.2",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    }
}
